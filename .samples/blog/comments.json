{
  "namespace": "api",
  "private": true,
  "name": "comments",
  "type": "default",
  "methods": ["get", "post", "patch", "delete"],
  "status": "published",
  "schema": {
    "_id": {
      "type": "string",
      "unique": true,
      "required": true,
      "auto": true
    },
    "postId": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "length": 24,
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "avatarUrl": {
      "type": "email"
    },
    "comment": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    }
  }
}
