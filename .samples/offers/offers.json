{
  "namespace": "api",
  "private": false,
  "name": "offers",
  "type": "default",
  "methods": ["get", "post", "patch", "delete"],
  "status": "published",
  "schema": {
    "_id": {
      "type": "string",
      "unique": true,
      "required": true,
      "auto": true
    },
    "title": {
      "type": "string",
      "length": 255,
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "featuredImageUrl": {
      "type": "string"
    },
    "offerCreated": {
      "type": "date",
      "required": true
    },
    "offerEnds": {
      "type": "date",
      "required": true
    },
    "category": "$categories",
    "tags": {
      "type": "array"
    }
  },
  "aggregate": ["$categories.offerId", "$$user"]
}
